<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_white_24dp</item>

    </style>

    <style name="Theme.MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/green</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_up</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorButtonNormal">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_up</item>
    </style>

    <style name="PrimaryButtonClose" parent="Theme.AppCompat">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_up</item>
    </style>
</resources>
