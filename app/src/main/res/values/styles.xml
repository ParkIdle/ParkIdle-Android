<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/parkIdleGreen</item>
        <item name="colorPrimaryDark">@color/parkIdleGrey</item>
        <item name="colorAccent">@color/parkIdleGrey</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/parkIdleGreen</item>
        <item name="colorPrimaryDark">@color/parkIdleGrey</item>
        <item name="colorAccent">@color/parkIdleGrey</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/facebook</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
