<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="app.parkidle.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/language_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:text="Language" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/language_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </android.support.v7.widget.AppCompatSpinner>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Raggiolabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:text="Notifica parcheggi nel raggio di:" />

        <SeekBar
            android:id="@+id/seek_Bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="50"
            android:progress="50" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Risparmio energia con batteria scarica" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/unita_misura_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:text="UnitÃ  di misura" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/unita_misura_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </android.support.v7.widget.AppCompatSpinner>

        <TextView
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Indirizzo di casa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text-view-casa"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:onClick="cas"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="14sp"
            android:text="Indirizzo del posto di lavoro" />

        <TextView
            android:id="@+id/text-view-lavoro"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:onClick="lav"
            android:textSize="10sp"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
